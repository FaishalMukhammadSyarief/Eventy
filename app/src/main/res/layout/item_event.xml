<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.zhalz.eventy.domain.model.Event" />

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        app:strokeColor="@color/gray"
        app:strokeWidth="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round_bottom_end"
            android:backgroundTint="@color/dark_blue"
            android:elevation="8dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="@{data.category}"
            android:textColor="@color/white"
            app:fontFamily="@font/poppins_semi_bold"
            tools:text="Music" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ship"
                tools:ignore="ImageContrastCheck" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginVertical="8dp"
                android:text="@{data.title}"
                android:textSize="@dimen/text_default"
                android:textStyle="bold"
                tools:ignore="VisualLintBounds"
                tools:text="Music Festival" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:text="@{data.date}"
                android:textSize="@dimen/text_medium"
                android:textStyle="bold"
                tools:ignore="VisualLintBounds"
                tools:text="25 Aug, 2024" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_role"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginVertical="8dp"
                android:text="@{data.role}"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/text_small"
                android:textStyle="bold"
                tools:ignore="VisualLintBounds,TextContrastCheck"
                tools:text="Project Manager" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>
