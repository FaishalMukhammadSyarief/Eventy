<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  UI ELEMENT  -->
    <style name="MyTextInputLayout">
        <item name="errorEnabled">true</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="boxCornerRadiusTopStart">@dimen/edit_text_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/edit_text_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/edit_text_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/edit_text_radius</item>
    </style>

    <style name="MyEditText">
        <item name="android:textSize">@dimen/text_default</item>
    </style>

    <style name="MyButton">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="cornerRadius">@dimen/edit_text_radius</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToolbarTitleAppearance" >
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="OtpInput" >
        <item name="android:layout_height">75dp</item>
        <item name="android:background">@drawable/bg_otp_input</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColorHint">@color/transparent</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="MyRoundImage">
        <item name="android:scaleType">centerCrop</item>
        <item name="shapeAppearance">@style/RoundCorner</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="RoundCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="SlightlyRoundCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/transparent</item>
    </style>

    <style name="MyExtendedFAB">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="iconTint">@null</item>
    </style>

</resources>