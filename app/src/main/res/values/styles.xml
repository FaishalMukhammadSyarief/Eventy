<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  UI ELEMENT  -->
    <style name="MyTextInputLayout">
        <item name="errorEnabled">true</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="boxCornerRadiusTopStart">@dimen/edit_text_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/edit_text_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/edit_text_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/edit_text_radius</item>
    </style>

    <style name="MyDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="errorEnabled">true</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="boxCornerRadiusTopStart">@dimen/edit_text_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/edit_text_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/edit_text_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/edit_text_radius</item>
        <item name="boxStrokeColor">@color/black</item>
    </style>

    <style name="MyEditText">
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="MyButton">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="cornerRadius">@dimen/edit_text_radius</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToolbarTitleAppearance">
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="OtpInput">
        <item name="android:layout_height">75dp</item>
        <item name="android:background">@drawable/bg_otp_input</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColorHint">@color/transparent</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="MyRoundImage">
        <item name="android:scaleType">centerCrop</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Full</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="CustomIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/dark_blue</item>
    </style>

    <style name="MyExtendedFAB">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="iconTint">@null</item>
    </style>

    <style name="MyFAB">
        <item name="android:backgroundTint">@color/white</item>
        <item name="tint">@color/dark_blue</item>
        <item name="elevation">3dp</item>
        <item name="fabCustomSize">60dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="MyFAB2">
        <item name="android:layout_margin">16dp</item>
        <item name="android:backgroundTint">@color/dark_blue</item>
        <item name="fabCustomSize">56dp</item>
        <item name="maxImageSize">26dp</item>
        <item name="elevation">3dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Full</item>
        <item name="tint">@color/white</item>
    </style>

    <!--  TEXT APPEARANCE  -->
    <style name="ButtonTitle">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

</resources>